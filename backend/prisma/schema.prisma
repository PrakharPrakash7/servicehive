// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  events               Event[]
  sentSwapRequests     SwapRequest[] @relation("RequesterUser")
  receivedSwapRequests SwapRequest[] @relation("OwnerUser")

  @@map("users")
}

enum EventStatus {
  BUSY
  SWAPPABLE
  SWAP_PENDING
}

model Event {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  startTime DateTime
  endTime   DateTime
  status    EventStatus @default(BUSY)
  userId    String      @db.ObjectId
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  user                     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  swapRequestsAsMySlot     SwapRequest[] @relation("MySlot")
  swapRequestsAsTheirSlot  SwapRequest[] @relation("TheirSlot")

  @@map("events")
}

enum SwapRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model SwapRequest {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  requesterId String            @db.ObjectId
  ownerId     String            @db.ObjectId
  mySlotId    String            @db.ObjectId
  theirSlotId String            @db.ObjectId
  status      SwapRequestStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  requester User  @relation("RequesterUser", fields: [requesterId], references: [id], onDelete: Cascade)
  owner     User  @relation("OwnerUser", fields: [ownerId], references: [id], onDelete: Cascade)
  mySlot    Event @relation("MySlot", fields: [mySlotId], references: [id], onDelete: Cascade)
  theirSlot Event @relation("TheirSlot", fields: [theirSlotId], references: [id], onDelete: Cascade)

  @@map("swap_requests")
}
